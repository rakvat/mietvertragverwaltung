<p id="notice"><%= notice %></p>

<p>
  <strong>Start:</strong>
  <%= @rent.start %>
</p>

<p>
  <strong>Basic rent:</strong>
  <%= @rent.basic_rent %>
</p>

<p>
  <strong>Rooms:</strong>
  <%= @rent.rooms.map { |r| RoomsHelper::label(r) }.join('; ') %>
</p>

<p>
  <strong>Tenant:</strong>
  <%= TenantsHelper::label(@rent.tenant) unless @rent.tenant.nil? %>
</p>


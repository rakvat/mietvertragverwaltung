<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>House</th>
      <th>Floor short</th>
      <th>Features</th>
      <th>Square meters</th>
      <th>Security hint</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id %></td>
        <td><%= room.house %></td>
        <td><%= room.floor_short %></td>
        <td><%= room.features %></td>
        <td><%= room.square_meters %></td>
        <td><%= room.security_hint %></td>
        <td><%= room.location %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

